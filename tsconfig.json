{
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "commonjs",
      "baseUrl": "."
    }
  },
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "@/components/*": ["components/*"],
      "@/public/*": ["public/*"],
      "@/utils/*": ["utils/*"],
      "@/lib/*": ["lib/*"],
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "lib/prisma.js"],
  "exclude": ["node_modules"]
}
